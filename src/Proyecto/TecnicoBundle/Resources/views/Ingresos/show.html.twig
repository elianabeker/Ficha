{% extends 'MWSimpleCrudGeneratorBundle::layout.html.twig' %}

{% block title %}
{{ parent() }} - {{ 'views.show.show'|trans({'%entity%': 'Ingresos'}, 'MWSimpleCrudGeneratorBundle') }}
{% endblock %}

{% block page %}
<h1>Ingresos</h1>

<form class="form-horizontal">
    <fieldset>            <div class="control-group">
                <label class="control-label">Id</label>
                <div class="controls">                    <span class="input-xlarge uneditable-input">{{ entity.id }}</span>                </div>
            </div>            <div class="control-group">
                <label class="control-label">Fecha</label>
                <div class="controls">                    <span class="input-xlarge uneditable-input">{{ entity.fecha|date('Y-m-d H:i:s') }}</span>                </div>
            </div>            <div class="control-group">
                <label class="control-label">Actuacionsimple</label>
                <div class="controls">                    <span class="input-xlarge uneditable-input">{{ entity.actuacionSimple }}</span>                </div>
            </div>            <div class="control-group">
                <label class="control-label">Observaciones</label>
                <div class="controls">                    <span class="input-xlarge uneditable-input">{{ entity.observaciones }}</span>                </div>
            </div>            <div class="control-group">
                <label class="control-label">Estado</label>
                <div class="controls">                    <span class="input-xlarge uneditable-input">{{ entity.estado }}</span>                </div>
            </div>            <div class="control-group">
                <label class="control-label">Fechasalida</label>
                <div class="controls">                    <span class="input-xlarge uneditable-input">{{ entity.fechaSalida|date('Y-m-d H:i:s') }}</span>                </div>
            </div>    </fieldset>
</form>

<div>
    <div class="float-left">
        <a class="btn" href="{{ path('ingresos') }}">
            {{ 'list'|trans({}, 'MWSimpleCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <a class="btn btn-primary" href="{{ path('ingresos_edit', { 'id': entity.id }) }}">
            {{ 'edit'|trans({}, 'MWSimpleCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <form action="{{ path('ingresos_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('{{ 'views.recordactions.confirm'|trans({}, 'MWSimpleCrudGeneratorBundle') }}');">{{ 'delete'|trans({}, 'MWSimpleCrudGeneratorBundle') }}</button>
        </form>
    </div>
</div>{% endblock %}