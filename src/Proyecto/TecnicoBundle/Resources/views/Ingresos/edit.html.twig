{% extends 'MWSimpleCrudGeneratorBundle::layout.html.twig' %}

{% block title %}
{{ parent() }} - {{ 'views.edit.edit'|trans({'%entity%': 'Ingresos'}, 'MWSimpleCrudGeneratorBundle') }}
{% endblock %}

{% block page %}
    <h1>{{ 'views.edit.edit'|trans({'%entity%': 'Ingresos'}, 'MWSimpleCrudGeneratorBundle') }}</h1>

    <form class="well" action="{{ path('ingresos_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit" class="btn btn-success">{{ 'views.edit.editbutton'|trans({}, 'MWSimpleCrudGeneratorBundle') }}</button>
        </p>
    </form>

        <div>
    <div class="float-left">
        <a class="btn" href="{{ path('ingresos') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'MWSimpleCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <form action="{{ path('ingresos_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('{{ 'views.recordactions.confirm'|trans({}, 'MWSimpleCrudGeneratorBundle') }}');">{{ 'views.recordactions.delete'|trans({}, 'MWSimpleCrudGeneratorBundle') }}</button>
        </form>
    </div>
</div>{% endblock %}